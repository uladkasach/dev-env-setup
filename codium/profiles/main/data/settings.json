  // usability basics
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "typescript.preferences.quoteStyle": "single",
  "javascript.preferences.quoteStyle": "single",
  "workbench.tree.indent": 20,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true, // it gets these painfully wrong too often :/
  "explorer.confirmDragAndDrop": false,
  "emmet.excludeLanguages": [
    "typescriptreact"
  ],
  // theme customizer
  "editor.tokenColorCustomizations": {
    "[Brackets Light Pro]": {
      "comments": "#a5a5a5"
    }
  },
  "workbench.colorCustomizations": {
    "[Blueberry dark theme]": {
      "editor.lineHighlightBackground": "#00000030",
      "editorLineNumber.foreground": "#999999", // otherwise, gutter is not visible
      "terminal.ansiGreen": "#27E8A7", // default is too yellow
    }
  },
  // formatting
  "editor.formatOnSave": true,
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[sql]": {
    "editor.formatOnSave": false
  },
  "prettier.requireConfig": true,
  "sync.gist": "f198f99713aeb52a4dcac0dfb8d73cd0",
  // gitblame
  "gitblame.statusBarMessageFormat": "${author.name} ( ${time.ago} )",
  "git.autofetch": true,
