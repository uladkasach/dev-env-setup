  "gitlens.views.repositories.avatars": false,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "markdown.extension.toc.updateOnSave": false,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-a>"
      ], // shortcut for select all
      "after": [
        "g",
        "g",
        "V",
        "G"
      ]
    },
  ],
  "vim.handleKeys": {
    "<C-c>": false,
    "<C-v>": false,
    "<C-x>": false,
    "<C-a>": false,
    "<C-z>": false,
    "<C-y>": false,
    "<C-w>": false,
    "<C-f>": false,
    "<S-Tab>": false
  },
  "macros": {
    "saveAndExitVimInsertMode": [
      "workbench.action.files.save",
      "extension.vim_escape", // for vscodevim
      "vscode-neovim.escape" // for vscode-neovim
    ],
    "vimEscape": [
      "extension.vim_escape", // for vscodevim
      "vscode-neovim.escape" // for vscode-neovim
    ]
  },
  "editor.lineNumbers": "relative",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
  ],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.alwaysShowStatus": true,
  "cSpell.enableFiletypes": [
    "sql"
  ],
  "sqltools.formatLanguages": [],
  "errorLens.gutterIconSize": "100%",
  "importSorter.importStringConfiguration.tabSize": 2,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.colorTheme": "Blueberry dark theme",
  "sqltools.connections": [],
  "sqltools.highlightQuery": false,
  "sqltools.showStatusbar": false,
  "terraform.languageServer": {
    "external": true,
    "args": [
      "serve"
    ]
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // no more snippets
  "editor.snippetSuggestions": "none",
  "diffEditor.ignoreTrimWhitespace": false,
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.useCtrlKeysForInsertMode": false,
  "vscode-neovim.useCtrlKeysForNormalMode": false,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": false
  },
  "workbench.editor.showTabs": "single",
  "editor.unicodeHighlight.allowedCharacters": {
    "âž•": true
  },
  "editor.suggestOnTriggerCharacters": false,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "terminal.integrated.gpuAcceleration": "off",
  "editor.snippets.codeActions.enabled": false,
  "github.copilot.advanced": {},
  "vsicons.dontShowNewVersionMessage": true,
  "terminal.integrated.customGlyphs": false,
  "security.workspace.trust.untrustedFiles": "open",
  "github.copilot.editor.enableAutoCompletions": true,
  "files.associations": {
    "*.src": "shellscript"
  },
  "redhat.telemetry.enabled": false,
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "gitlens.plusFeatures.enabled": false,
  "gitlens.virtualRepositories.enabled": false,
  "gitlens.currentLine.pullRequests.enabled": false,
  "claudeCode.preferredLocation": "panel"
}
